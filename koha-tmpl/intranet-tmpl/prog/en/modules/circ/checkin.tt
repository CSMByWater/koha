[% INCLUDE 'doc-head-close.inc' %]

[% INCLUDE 'calendar.inc' %]
<script type="text/javascript" src="[% interface %]/lib/jquery/plugins/jquery-ui-timepicker-addon.min.js"></script>
<script src="[% interface %]/lib/angular/angular.min.js"></script>

<script type="text/javascript">
//<![CDATA[
function Dopop(link) {
    var newin = window.open(link, 'popup', 'width=600,height=400,resizable=1,toolbar=0,scrollbars=1,top');
    $("#barcode").focus();
}
$(document).ready(function () {
    $("#return_date_override").datetimepicker({
        onClose: function(dateText, inst) { $("#barcode").focus(); },
        defaultDate: -1,
        hour: 23,
        minute: 59,
        maxDate: 0
    });
    $("#return_date_override").on("blur", function() {
            check_valid_return_date();
    });
    $("#checkin-form").submit(function( event ) {
        if ( !check_valid_return_date() ) {
            event.preventDefault();
        }
    });

    function check_valid_return_date() {
        if ( $("#return_date_override").val() ) {
            var datetime = DateTime_from_syspref( $("#return_date_override").val() );
            var now = new Date();
            if ( !datetime || datetime > now ) {
                alert("Invalid return date/time!");
                $("#return_date_override").val("")
                return false;
            }
        }
        return true;
    }

    $("#exemptcheck").change(function () {
        if (this.checked == true) {
            $("#barcode").addClass("alert");
            $("#exemptfines").show();
        } else {
            $("#barcode").removeClass("alert");
            $("#exemptfines").hide();
        }
        $("#barcode").focus();
    });
    $("#dropboxcheck").change(function () {
        if (this.checked == true) {
            $("#barcode").addClass("alert");
            $("#dropboxmode").show();

            $("#return_date_override_fields :input").attr("disabled", true);
            $("#return_date_override").datetimepicker("disable");
        } else {
            $("#barcode").removeClass("alert");
            $("#dropboxmode").hide();

            $("#return_date_override_fields :input").attr("disabled", false);
            $("#return_date_override").datetimepicker("enable");
        }
        $("#barcode").focus();
    });
    [% IF(overduecharges) %] $("#barcode").focus(function () {
        if (($("#exemptcheck").attr("checked") == true) || ($("#dropboxcheck").attr("checked") == true)) {
            $("#barcode").addClass("alert");
        } else {
            $("#barcode").removeClass("alert");
        }
    });
    $("#barcode").blur(function () {
        $("#barcode").removeClass("alert");
    });
    [% END %]
});

var authorised_values = {
    [% FOREACH category IN authorised_values -%]
        "[% category.key %]":{
            [% FOREACH value IN category.value -%]
                "[% value.value %]":"[% value.lib %]",
            [% END -%]
        },
    [% END -%]
}

var checkinApp = angular.module( 'checkinApp', [] )
    .filter( 'isNotEmpty', function() {
        return function(obj) {
            return !$.isEmptyObject(obj);
        };
    } );

checkinApp.controller( 'CheckinController', function ( $scope, $http, $timeout ) {

    $scope.today = $.datepicker.formatDate('yyyy-mm-dd', new Date());
    $http.defaults.headers.post["Content-Type"] = "application/x-www-form-urlencoded";
    $scope.authorised_values = authorised_values;

    $scope.checkins = [];

    $('#yui-main > .yui-b').show();
    $('.loading-overlay').hide();

    $scope.checkin = function(barcode, confirmed) {
        var barcode = barcode || $scope.barcode;
        console.log( "HELLO" );
        var params = { 
            checkedin: 1,
            dropboxmode : $scope.dropboxmode || "",
            return_date_override : $scope.return_date_override || "",
            exemptfine : $scope.exemptfine || "", 
            };
        if ( confirmed ) {
            params.confirmed = 1;
            params.cancelreserve = $scope.cancelreserve || "";
        }
        $http.post( '/cgi-bin/koha/svc/items/' + $scope.barcode, $.param( params ) ).success(function( data ) {
                data = data.responses[0];
                $scope.last_barcode = barcode;

                $scope.barcode = '';
                $scope.biblio = data.biblio;
                $scope.borrower = data.borrower;
                $scope.issueinformation = data.issueinformation;
                $scope.messages = data.messages;
                $scope.returned = data.returned;

                if(data.returned) {
                    $scope.checkins.unshift( { 
                        issueinformation : $scope.issueinformation, 
                        borrower : $scope.borrower,
                        biblio : $scope.biblio,
                    } );
                }
            });
    };     
} );
//]]>
</script>
</head>
