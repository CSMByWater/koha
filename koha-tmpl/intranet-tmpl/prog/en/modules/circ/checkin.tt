    </div>

[% IF ( checkinmsg ) %]
    [% IF ( checkinmsgtype == 'alert' ) %]
        <div class="dialog alert">
    [% ELSE %]
        <div class="dialog message">
    [% END %]
            <p class="problem">[% checkinmsg | html_line_break %]</p>
        </div>
[% END%]

    <div id="exemptfines" class="dialog message" style="display:none;">
        <p>Fines for returned items are forgiven.</p>
    </div>
    <div id="dropboxmode" class="dialog message" style="display:none;">
        <p>Book drop mode.  (Effective checkin date is [% dropboxdate %] ).</p>
    </div>
</div>
    <div class="yui-g">
    <form id="checkin-form" autocomplete="off" ng-submit="checkin()">
    <div class="yui-u first">
            <fieldset>
    <legend>Check in</legend>
            <label for="barcode">Enter item barcode: </label>
            <input name="barcode" id="barcode" size="14" class="focus" ng-model="barcode"/>
            <input type="submit" class="submit" value="Submit" />

            [% IF Koha.Preference('SpecifyReturnDate') %]
                <div class="date-select" id="return_date_override_fields">
                    <div class="hint">Specify return date [% INCLUDE 'date-format.inc' %]: </div>

                    <input type="text" size="13" id="return_date_override" name="return_date_override" value="[% return_date_override %]" />

                    <label for="return_date_override_remember"> Remember for next check in:</label>
                    [% IF ( return_date_override_remember ) %]
                        <input type="checkbox" id="return_date_override_remember" onclick="this.form.barcode.focus();" name="return_date_override_remember" checked="checked" />
                    [% ELSE %]
                        <input type="checkbox" id="return_date_override_remember" onclick="this.form.barcode.focus();" name="return_date_override_remember" />
                    [% END %]

                    <input type="button" class="action" id="cleardate" value="Clear" name="cleardate" onclick="this.checked = false; this.form.return_date_override.value = ''; this.form.return_date_override_remember.checked = false; this.form.barcode.focus(); return false;" />
            </div>
        [% END %]
            [% FOREACH inputloo IN inputloop %]
                <input type="hidden" name="ri-[% inputloo.counter %]" value="[% inputloo.barcode %]" />
                <input type="hidden" name="dd-[% inputloo.counter %]" value="[% inputloo.duedate %]" />
                <input type="hidden" name="bn-[% inputloo.counter %]" value="[% inputloo.borrowernumber %]" />
            [% END %]


            </fieldset>
            </div>
            <div class="yui-u">
            <fieldset id="checkin_options">
                <legend>Options</legend>
                    [% IF ( CAN_user_updatecharges_writeoff && overduecharges ) %]
                    <p>
                        <input type="checkbox" id="exemptcheck" name="exemptfine" value="exemptfine" ng-model="exemptfine" />
                        <label for="exemptcheck">Forgive overdue charges</label>
                    </p>
                    [% END %] <!-- overduecharges -->
                    <p>
                        <input type="checkbox" id="dropboxcheck" name="dropboxmode" value="dropboxmode" ng-model="dropboxmode" />
                        <label for="dropboxcheck">Book drop mode</label>
                    </p>
            </fieldset>
        </div>
    </form>
</div>

<div ng-show="checkins.length">
    <h2>Checked-in items</h2>
    <table>
    <tr><th>Due date</th><th>Title</th> <th>Author</th> <th>Barcode</th><th>Home library</th><th>Holding library</th><th>Shelving location</th><th>Call number</th><th>Type</th>    <th>Patron</th><th>Note</th></tr>

            <tr ng-repeat="checkin in checkins">
            <td>
                <span ng-show="checkin.issueinformation.date_due">
                    <span class="overdue" ng-show="checkin.issueinformation.overdue">{{checkin.issueinformation.date_due_formatted}} (overdue)</span>
                    <span ng-hide="checkin.issueinformation.overdue">{{checkin.issueinformation.date_due_formatted}}</span>
                </span>
                <span ng-hide="checkin.issueinformation.date_due">
                    Not checked out
                </span>
            </td>
            <td><a href="/cgi-bin/koha/catalogue/detail.pl?biblionumber={{checkin.biblio.biblionumber}}">
                    {{checkin.biblio.title}}</a></td>
            <td>{{checkin.biblio.author}}</td>
            <td><a href="/cgi-bin/koha/catalogue/moredetail.pl?biblionumber={{checkin.biblio.biblionumber}}&amp;itemnumber={{checkin.issueinformation.itemnumber}}#item{{checkin.issueinformation.itemnumber}}">{{checkin.issueinformation.barcode}}</a></td>
            <td>{{checkin.issueinformation.homebranch}}</td>
            <td>{{checkin.issueinformation.holdingbranch}}</td>
            <td>{{authorised_values['[% authvalcode_location %]'][checkin.issueinformation.location]}}</td>
            <td>{{checkin.issueinformation.itemcallnumber}}</td>
            <td>{{checkin.issueinformation.itemtype}} {{checkin.issueinformation.ccode}}</td>
            <td>
                <a href="/cgi-bin/koha/members/moremember.pl?borrowernumber={{ checkin.borrower.borrowernumber }}" ng-show="checkin.issueinformation.date_due">
                    {{ checkin.borrower.surname }}, {{ checkin.borrower.firstname }}, ({{ checkin.borrower.categorycode }})
                </a>
            <span ng-hide="checkin.issueinformation.date_due">Not checked out</span></td>
            <td><span class="circ-hlt" ng-show="checkin.borrower.borrowernotes">{{ checkin.borrower.borrowernotes }}<br /></span>
            <span class="circ-hlt" ng-show="checkin.issueinformation.itemnote">{{ checkin.issueinformation.itemnote }}</span>
            </td>
           </tr>
    </table></div>
</div>


</div>
[% INCLUDE 'intranet-bottom.inc' %]
